<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_bg">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_evaluate_custom_image"
        android:layout_width="0dp"
        android:layout_height="45dp"
        tools:src="@drawable/ic_student"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4" />


    <TextView
        android:id="@+id/tv_evaluate_custom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        android:text="爱吃肉的豆豆"
        tools:layout_conversion_absoluteX="65dp"
        tools:layout_conversion_absoluteY="12dp"
        tools:layout_conversion_absoluteWidth="78dp"
        tools:layout_conversion_absoluteHeight="16dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_evaluate_custom_image"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_evaluate_custom_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        android:textColor="@color/dark_text_color"
        android:text="3分钟前"
        tools:layout_conversion_absoluteX="65dp"
        tools:layout_conversion_absoluteY="38dp"
        tools:layout_conversion_absoluteWidth="42dp"
        tools:layout_conversion_absoluteHeight="14dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_evaluate_custom_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_evaluate_custom_image"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4" />


    <TextView
        android:id="@+id/tv_evaluate_custom_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/dark_text_color"
        android:gravity="start"
        android:text="定语从句和宾语从句别"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="89dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        android:layout_marginTop="-5dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="55dp" />
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/selector_touch_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_un_checked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_student_portrait"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:src="@drawable/ic_student" />


    <TextView
        android:id="@+id/tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:text="王毅"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/civ_student_portrait"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_student_id"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:text="13105668325"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/civ_student_portrait"
        app:layout_constraintTop_toBottomOf="@+id/tv_student_name"
        tools:layout_conversion_absoluteHeight="32dp"
        tools:layout_conversion_absoluteWidth="82dp"
        tools:layout_conversion_absoluteX="96dp"
        tools:layout_conversion_absoluteY="32dp" />


    <TextView
        android:id="@+id/tv_late"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_late"
        android:visibility="gone"
        android:gravity="center"
        android:text="迟到"
        android:textColor="@color/white_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_leave_early"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_leave_early"
        android:visibility="gone"
        android:gravity="center"
        android:text="早退"
        android:textColor="@color/white_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"  />

    <TextView
        android:id="@+id/tv_absenteeism"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_absenteeism"
        android:visibility="gone"
        android:gravity="center"
        android:text="旷课"
        android:textColor="@color/white_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"  />

    <TextView
        android:id="@+id/tv_leave"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_leave"
        android:visibility="gone"
        android:gravity="center"
        android:text="请假"
        android:textColor="@color/white_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"  />

</android.support.constraint.ConstraintLayout>





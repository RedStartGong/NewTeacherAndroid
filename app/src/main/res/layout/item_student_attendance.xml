<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/selector_touch_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_un_checked" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_student_portrait"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:src="@drawable/ic_student" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="王毅"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_student_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="13105668325"
            android:textSize="13sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_late"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_late"
        android:gravity="center"
        android:text="迟到"
        android:textColor="@color/white_text_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_leave_early"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_leave_early"
        android:gravity="center"
        android:text="早退"
        android:textColor="@color/white_text_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_absenteeism"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_absenteeism"
        android:gravity="center"
        android:text="旷课"
        android:textColor="@color/white_text_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_leave"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_leave"
        android:gravity="center"
        android:text="请假"
        android:textColor="@color/white_text_color"
        android:visibility="gone" />

</LinearLayout>




